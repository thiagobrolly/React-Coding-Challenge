{
  "name": "rbr-test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "commit": "yarn cz",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx,.mdx --max-warnings=0",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx,.mdx --fix",
    "prettier:check": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "test": "jest",
    "test:watch": "jest --watch",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "dependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@chakra-ui/react": "^2.4.9",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@next/font": "13.1.5",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/uuid": "^9.0.0",
    "axios": "^1.3.2",
    "eslint": "^8.33.0",
    "eslint-config-next": "13.1.5",
    "framer-motion": "^8.5.3",
    "next": "13.1.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.7.1",
    "typescript": "4.9.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@faker-js/faker": "^7.6.0",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@thiago_brolly/eslint-config": "^1.1.1",
    "babel-jest": "^29.4.1",
    "commitizen": "^4.2.4",
    "cypress": "8.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "jest": "^29.4.1",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.4.1",
    "miragejs": "^0.1.47",
    "msw": "^1.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "feat": {
          "title": "New feature",
          "description": "novas funcionalidades"
        },
        "perf": {
          "title": "Performance improvement",
          "description": "aumenta performance"
        },
        "fix": {
          "title": "Bug fix",
          "description": "resolve um problema"
        },
        "refactor": {
          "title": "Refectory",
          "description": "melhora ou mudanças de estrutura do código"
        },
        "docs": {
          "title": "Documentation",
          "description": "adiciona documentação"
        },
        "test": {
          "title": "Test",
          "description": "trabalha tests"
        },
        "style": {
          "title": "Style",
          "description": "trabalha estilo"
        },
        "chore": {
          "title": "New Version",
          "description": "Release de nova versão"
        },
        "build": {
          "title": "New Version",
          "description": "marcar mudanças de build"
        },
        "ci": {
          "title": "Continuos Integration",
          "description": "integração Contínua"
        },
        "env": {
          "title": "Environment",
          "description": "modificar ou adicionar funcionalidade ao ambiente"
        },
        "wip": {
          "title": "Work in progress",
          "description": "salva trabalho ainda em progresso"
        },
        "pack": {
          "title": "Pack",
          "description": "instala pacotes e/ou dependências ao projeto"
        }
      }
    }
  }
}
